---
// props for video id
const { info } = Astro.props;
console.log(info);
---

<div class="bg-violet-900 bg-opacity-25 rounded-2xl overflow-hidden flex flex-col justify-between">
	{
		info.thumbnail && (
			<div>
				<img class="block w-full" src={info.thumbnail} alt={info.title} />
			</div>
		)
	}
	<div class="p-2 h-full grid grid-cols-1 gap-2 justify-items-center justify-between content-between">
		<h3 class="text-lg font-normal  underline-offset-8 leading-tight">{info.title}</h3>

		<a
			href={info.url}
			class="block w-full text-white bg-gradient-to-r from-purple-500 to-pink-500 hover:bg-gradient-to-l focus:ring-4 focus:outline-none focus:ring-purple-200 dark:focus:ring-purple-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2"
		>
			{info.link_text}
		</a>
	</div>
</div>
