---
import Layout from '../layouts/Layout.astro';
import MainContent from '../components/MainContent.astro';
import Keywords from '../components/Keywords.astro';
import SideMenu from '../components/SideMenu.astro';
import Header from '../components/Header.astro';
import {site_title} from '../assets/data/config.json'
---

<Layout title={site_title}>
	<div class="container mx-auto ">
		<Header />

		<div class="flex flex-row flexwrap">
			
			<main class="flex flex-col  w-2/3 p-6">
				<MainContent />
			</main>

			<aside class="  w-1/3  p-6">
				<SideMenu />
			</aside>

		</div>

		<footer class="py-6">
			<Keywords />
			
		</footer>

	</div>
	
</Layout>
